#include "hspext.as"


	screen 0, 64, 48, 1,
	gsel 0, 2						; 最前面化

	pos 4, 8
	objsize 128, 32
	button "２回コピー", *double_copy

	stop


*double_copy
	sdim clip_str, 3200000			; 320万文字分のバッファを確保
	clipget clip_str, 3000000		; クリップボードからテキスト取得
	
	clipset clip_str				; クリップボードにテキストを転送
	wait 25							; 250ms待機
	clipset clip_str				; クリップボードにテキストを転送

	stop




